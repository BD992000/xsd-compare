<?xml version="1.0" encoding="UTF-8"?>

<?import com.compare.xsd.ui.Icons?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.compare.xsd.views.HelpView" stylesheets="/styles/main.css">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="25" minWidth="25" prefWidth="25"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <!-- HEADERS -->
    <Label GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label text="Name" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" styleClass="bold"/>
    <Label text="Description" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" styleClass="bold"/>
    <!-- Rows -->
    <!-- Section: Menu -->
    <Label GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" text="Menu" styleClass="section"/>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="CENTER" styleClass="icon">
        <Icons fx:constant="FILE"/>
    </Label>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="2" text="New file" GridPane.valignment="CENTER"/>
    <Label GridPane.columnIndex="2" GridPane.rowIndex="2" text="Clear the window" GridPane.valignment="CENTER"/>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="CENTER" styleClass="icon">
        <Icons fx:constant="FOLDER_OPEN"/>
    </Label>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="3" text="Open file" GridPane.valignment="CENTER"/>
    <Label GridPane.columnIndex="2" GridPane.rowIndex="3" text="Load and show XSD file" GridPane.valignment="CENTER"/>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.valignment="CENTER" styleClass="icon">
        <Icons fx:constant="COGS"/>
    </Label>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="4" text="Batch comparison" GridPane.valignment="CENTER"/>
    <Label GridPane.columnIndex="2" GridPane.rowIndex="4" text="Run multiple XSD comparison's at the same time" GridPane.valignment="CENTER"/>

    <Label GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.valignment="CENTER" styleClass="icon">
        <Icons fx:constant="DOWNLOAD"/>
    </Label>
    <Label GridPane.columnIndex="1" GridPane.rowIndex="5" text="Export comparison" GridPane.valignment="CENTER"/>
    <Label GridPane.columnIndex="2" GridPane.rowIndex="5" text="Export the comparison to an Excel file" GridPane.valignment="CENTER"/>
</GridPane>
